@model SistemaDP.Models.Bancos

@{
    ViewData["Title"] = "Adicionar novo Banco";
}


<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Adicionar">
            <div class="form-group">
                <label asp-for="numero_banco" class="control-label"></label>
                <input asp-for="numero_banco" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="descricao_banco" class="control-label"></label>
                <input asp-for="descricao_banco" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="agencia_banco" class="control-label"></label>
                <input asp-for="agencia_banco" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="conta_banco" class="control-label"></label>
                <input asp-for="conta_banco" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary"/>
            </div>

        </form>
    </div>

</div>