@model IEnumerable<SistemaDP.Models.Salarios>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.cargo_original)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cargo_atual)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.salario_original)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.salario_atual)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.data_modificao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cargo_original)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cargo_atual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.salario_original)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.salario_atual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.data_modificao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
